<!-- about area start -->
<div class="rts-about-area rts-section-gap">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-lg-6">
        <!-- Image area -->
        <div class="rts-about-left-image-area">
          <div class="thumbnail">
            <img src="/assets/images/about/20.png" alt="solar energy">
          </div>
        </div>
      </div>
      <div class="col-lg-6">
        <!-- Content area -->
        <div class="about-right-content-area-solar-energy">
          <div class="title-area-left">
            <p class="pre"><span>About</span> ZERONET Clean Energy Ltd</p>
            <h2 class="title skew-up">{{ title }}</h2>
          </div>
          <!-- Tab navigation -->
          <ul class="nav custom-nav-soalr-about nav-pills" id="pills-tab" role="tablist">
            {% for tab in tabs %}
            <li class="nav-item" role="presentation">
              <button class="nav-link {% if loop.first %}active{% endif %}"
                      id="pills-{{ loop.index }}-tab"
                      data-bs-toggle="pill"
                      data-bs-target="#pills-{{ loop.index }}"
                      type="button"
                      role="tab"
                      aria-controls="pills-{{ loop.index }}"
                      aria-selected="{% if loop.first %}true{% else %}false{% endif %}">{{ tab.title }}</button>
            </li>
            {% endfor %}
          </ul>
          <!-- Tab content -->
          <div class="tab-content" id="pills-tabContent">
            {% for tab in tabs %}
            <div class="tab-pane fade {% if loop.first %}show active{% endif %}"
                 id="pills-{{ loop.index }}"
                 role="tabpanel"
                 aria-labelledby="pills-{{ loop.index }}-tab">
              <div class="single-about-content-solar">
                <p class="disc">{{ tab.description }}</p>
                <div class="row align-items-center">
                  <div class="col-lg-6">
                    <div class="left-area-wrapper">
                      <img src="{{ tab.image }}" alt="{{ tab.altText }}">
                    </div>
                  </div>
                  <div class="col-lg-6">
                    {% for item in tab.checkList %}
                    <div class="single-ckeck-wrapper">
                      <img src="/assets/images/about/dt.png" alt="dotted">
                      <p>{{ item }}</p>
                    </div>
                    {% endfor %}
                  </div>
                </div>
                <!-- Video area -->
                <div class="vedio-area-start">
                  <a href="/services/" class="rts-btn btn-primary">Our Services <i class="fa-regular fa-arrow-right"></i></a>
                  <div class="vedio-icone">
                    <a class="play-video video-play-button" href="#">
                      <span></span>
                      <p class="text">Play Video</p>
                    </a>
                    <div class="video-overlay">
                      <a class="video-overlay-close">Ã—</a>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            {% endfor %}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- about area end -->

{% include "components/pages/about/about-cta.njk" %}
